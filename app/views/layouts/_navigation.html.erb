<header nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "MyRecipes", root_path, class: "navbar-brand" %>
    
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      
      <ul class="nav navbar-nav">
        
        <li class="dropdown">
             <%= link_to '#', class: "btn btn-default dropdown-toggle", "data-toggle" => "dropdown" do %>
               Styles <b class="caret"></b>
               <% end %>
               <ul class='dropdown-menu'>
                 
                  <% Style.all.each do |style| %>
                   <li><%= link_to style.name, style_path(style) %></li>
                  <% end %>
                  <% if logged_in? %>
                  <li class="divider"></li>
                  <li>
                    
                    <%= link_to(new_style_path) do %>
                      Add New Style
                    <% end %>
                    
                  </li>
                  
                  <% end %>
               </ul>
               
           </li>
           
           <li class="dropdown">
             <%= link_to '#', class: "btn btn-default dropdown-toggle", "data-toggle" => "dropdown" do %>
                Ingredients <b class="caret"></b>
               <% end %>
               <ul class='dropdown-menu'>
                 
                  <% Ingredient.all.each do |ingredient| %>
                   <li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
                  <% end %>
                  
                  <% if logged_in? %>
                  <li class="divider"></li>
                  <li>
                    
                    <%= link_to(new_style_path) do %>
                      Add New Ingredient
                    <% end %>
                    
                  </li>
                  
                  <% end %>
               </ul>
              
           </li>
        
        <% if logged_in? %>
           
           <li class="dropdown">
             <%= link_to '#', class: "btn btn-default dropdown-toggle", "data-toggle" => "dropdown" do %>
               <%= current_user.chefname %> <b class="caret"></b>
               <% end %>
               <ul class='dropdown-menu'>
                 
                 <li><%= link_to "View Profile", chef_path(current_user) %></li>
                 <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
                 <li class="divider"></li>
                 <li><%= link_to "Logout", logout_path %></li>

                 
               </ul>
               
           </li>
           
           <li>
              <%= link_to "Submit Recipe", new_recipe_path, class: "btn-default btn btn-login btn-login:hover" %>
           </li>
           
           <% else %>
           
           <li>
            <%= link_to "Log In", login_path, class: "btn-default btn btn-login" %>
           </li>
           
           
           
           <% end %>
        
      </ul>
      
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</header>
<div="clear">
</div>