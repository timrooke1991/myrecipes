<div class="container-fluid backdrop">
  
<%= render 'shared/page_title', title: "Chef: " + @chef.chefname %>

  <div class="row">
    
    <div class="col-md-4 col-md-offset-4">
      
      <%= gravatar_for @chef, size: 200 %>
      <hr/>
      
    </div>
  </div>
  
  <div class="row">
    
    <span class=" col-md-4 col-md-offset-4 center">
      
      <h3><emphasis>Recipes:</emphasis></h3>
      <%= will_paginate @recipes %>
    </span>
    
  </div>
  
  <hr>
  
<% @recipes.each do |recipe| %>

<div class="row recipe-item">
    <div class="col-md-6 col-md-offset-3">      

      <div class="media-body">
          <h4 class="media-heading"><%= link_to recipe.name, recipe_path(recipe) %></h4>  
        <section class="chef_info center">
            <p><%= recipe.summary %></p>
                <p>
                  <span class="quiet"><small>created <%= time_ago_in_words(recipe.created_at) + " ago | "%></small></span>
                  <span class="quiet"><small> updated <%= time_ago_in_words(recipe.updated_at) %></small></span>
  
                </p>
            <div class="pull-right">
          
              <%= link_to like_recipe_path(recipe, like: true), method: :post do %>
              
                <i class="glyphicon glyphicon-thumbs-up"></i>&nbsp; <%= recipe.thumbs_up_total %>
              
              <% end %> &nbsp;&nbsp;&nbsp;&nbsp;
              
              <%= link_to like_recipe_path(recipe, like: false), method: :post do %>
              
                <i class="glyphicon glyphicon-thumbs-down"></i>&nbsp; <%= recipe.thumbs_down_total %>
          
              <% end %>
              
            </div>

        </section>
        
      </div>
  </div>
    
</div>    
    
<% end %>


</div>

    

      